<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <enum id="com.github.calo001.fondo.photos-mode">
        <value nick="any" value="0"/>
        <value nick="landscape" value="1"/>
        <value nick="portrait" value="2"/>
    </enum>
    <enum id="com.github.calo001.fondo.mode-theme">
        <value nick="follow-system" value="0"/>
        <value nick="light" value="1"/>
        <value nick="dark" value="2"/>
    </enum>
    <schema id="com.github.calo001.fondo" path="/com/github/calo001/fondo/">
        <key name="window-x" type="i">
            <default>-1</default>
            <summary>Most recent x position of Fondo</summary>
            <description>Most recent x position of Fondo</description>
        </key>
    
        <key name="window-y" type="i">
            <default>-1</default>
            <summary>Most recent y position of Fondo</summary>
            <description>Most recent y position of Fondo</description>
        </key>

        <key name="window-height" type="i">
            <default>-1</default>
            <summary>Most recent window height of Fondo</summary>
            <description>Most recent window height of Fondo</description>
        </key>

        <key name="window-width" type="i">
            <default>-1</default>
            <summary>Most recent window width of Fondo</summary>
            <description>Most recent window width of Fondo</description>
        </key>

        <key name="mode-theme" enum="com.github.calo001.fondo.mode-theme">
            <default>"follow-system"</default>
            <summary>Mode Theme</summary>
            <description>Mode Theme for Fondo</description>
        </key>

        <key name="maximized" type="b">
            <default>false</default>
            <summary>Is maximized window</summary>
            <description>Open maximized window on start for Fondo</description>
        </key>

        <key name="filter-mode" enum="com.github.calo001.fondo.photos-mode">
            <default>"any"</default>
            <summary>Filter photos</summary>
            <description>Filter photos in landscape, portrait or any</description>
        </key>
    </schema>

</schemalist>